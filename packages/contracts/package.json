{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "mud tablegen && mud worldgen",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "deploy:garnet": "mud deploy --profile=garnet",
    "deploy:redstone": "mud deploy --profile=redstone",
    "deploy:local": "export PATH=\"$HOME/.foundry/bin:$PATH\" && pnpm run build && mud deploy && pnpm run copy-abi",
    "deploy:fluent": "export PATH=\"$HOME/.foundry/bin:$PATH\" && pnpm run build && mud deploy --profile=fluent-testnet && pnpm run copy-abi",
    "dev": "mud dev-contracts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "tsc --noEmit && mud test",
    "copy-abi": "cp -r out/IWorld.sol/* ../client/src/contracts/ && cp worlds.json ../client/src/contracts/ && cp worlds.json.d.ts ../client/src/contracts/"
  },
  "dependencies": {
    "@latticexyz/cli": "github:ArchetypalTech/mud-fluent#blended-fork",
    "@latticexyz/schema-type": "2.2.19",
    "@latticexyz/store": "2.2.19",
    "@latticexyz/world": "2.2.19",
    "@latticexyz/world-modules": "2.2.19"
  },
  "devDependencies": {
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.2.19",
    "solhint-plugin-mud": "2.2.19"
  }
}
